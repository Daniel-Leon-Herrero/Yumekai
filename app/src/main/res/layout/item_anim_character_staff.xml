<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="200dp"
    android:layout_width="130dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/red_primary"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/animeDetail_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/yumekai_unknown_portrait"
        android:paddingBottom="4dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/red_primary_op"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        android:layout_gravity="bottom|center_horizontal">

        <TextView
            android:id="@+id/animeDetail_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="José María Ugal Luque"
            android:textSize="12sp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/nunito_black"
            android:textAllCaps="true"
            android:textColor="@color/red_primary"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

    </com.google.android.material.card.MaterialCardView>


</com.google.android.material.card.MaterialCardView>

